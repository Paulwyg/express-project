                <telerik:RadCartesianChart.Series>
                    <telerik:LineSeries ValueBinding="Value" CategoryBinding="Category" ItemsSource="{Binding LineData[3]}">
                        <telerik:LineSeries.TrackBallInfoTemplate>
                            <DataTemplate>
