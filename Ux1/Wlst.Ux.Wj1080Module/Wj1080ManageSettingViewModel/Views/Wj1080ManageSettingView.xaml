            <!--<CheckBox Grid.Row="1" IsChecked="{Binding IsShowGrpInTreeModelShowId}" Content="分组显示组地址" VerticalAlignment="Center" ></CheckBox>-->

            <CheckBox VerticalContentAlignment="Center"  IsChecked="{Binding IsShowTreeOnTab}" Content="显示光控设备树 [主界面树区域将显示光控设备树]" VerticalAlignment="Center" ></CheckBox>

            <TextBlock Grid.Row="1" VerticalAlignment="Center" Text="光控设备树显示设置: [重启或刷新设备树有效]"></TextBlock>

            <!--<CheckBox Grid.Row="2"  Margin="25,0,0,0" IsChecked="{Binding IsOnSelectNodeNavToParsSetView}" Content="选中光控设备时立即弹出设置界面  " VerticalAlignment="Center" ></CheckBox>-->

            <CheckBox Grid.Row="3" VerticalContentAlignment="Center"  Margin="25,0,0,0" IsChecked="{Binding IsShowArea}" Content="显示区域节点" VerticalAlignment="Center" ></CheckBox>

            <CheckBox Grid.Row="4" VerticalContentAlignment="Center"  Margin="25,0,0,0" IsChecked="{Binding IsShowGrp}" Content="显示分组节点" VerticalAlignment="Center" ></CheckBox>

            <CheckBox Grid.Row="5" VerticalContentAlignment="Center"  Margin="25,0,0,0" IsChecked="{Binding IsShowFid}" Content="显示光控连接的终端信息 [终端地址-终端名称]" VerticalAlignment="Center" ></CheckBox>

            <DockPanel Grid.Row="6" VerticalAlignment="Center" >
                <TextBlock VerticalAlignment="Center"  Text="主界面显示的光控为:"></TextBlock >
                <ComboBox Margin=" 10,0,0,0"  VerticalAlignment="Center" Visibility="Visible"  Width="150" HorizontalAlignment="Left"
                          ItemsSource="{Binding LuxCollection}" SelectedItem="{Binding CurrentSelectLux}" DisplayMemberPath="Name" IsEditable="False" ></ComboBox>
            </DockPanel>

            <TextBlock Grid.Row="7"  VerticalAlignment="Center" Text="主界面光控显示位置:"></TextBlock >
            <RadioButton  Grid.Row="8" Margin="25,0,0,0" Content="主界面左侧日出日落信息上方"  IsChecked="{Binding Path=Is1080ShowTopRight, Converter={StaticResource RadioButtonBooleanConverter}, ConverterParameter=false}" Name="radioButton1" VerticalAlignment="Center" />
            <RadioButton Grid.Row="9" Margin="25,0,0,0" Content="主界面右上角用户登录信息左侧"  IsChecked="{Binding Path=Is1080ShowTopRight, Converter={StaticResource RadioButtonBooleanConverter}, ConverterParameter=true}" Name="radioButton2" VerticalAlignment="Center" />
            <Grid Grid.Row="10" VerticalAlignment="Center"  Visibility="{Binding ShowWarning}" >
                <Grid.RowDefinitions>
