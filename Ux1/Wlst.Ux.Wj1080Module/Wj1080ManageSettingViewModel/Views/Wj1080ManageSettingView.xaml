                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="29*"/>
                    <ColumnDefinition Width="271*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition Height="25"></RowDefinition>
                </Grid.RowDefinitions>
                <DockPanel Grid.ColumnSpan="2">
                    <CheckBox IsChecked="{Binding IsShowOpenClose}" VerticalContentAlignment="Center" Content="光控开关灯语音提醒[光控开关灯提醒使用主界面显示的光控]" VerticalAlignment="Center" ></CheckBox>
                </DockPanel>
                <DockPanel Grid.Row="1" VerticalAlignment="Center" Grid.ColumnSpan="2">
                    <TextBlock Margin=" 25,0,0,0" Width="250">光控开关灯,在光控小于时间表光控设置</TextBlock>
                    <TextBox MinWidth="50" Text="{Binding SunBefore}" Height="20"  MaxLength="5"></TextBox>
                    <TextBlock >[Lux]语音提醒</TextBlock>
                </DockPanel>
                <DockPanel Grid.Row="2" VerticalAlignment="Center" Grid.ColumnSpan="2" >
                    <TextBlock FontWeight="Normal" FontStretch="Normal" Margin=" 25,0,0,0" Width="250">时控开关灯,在时控开关灯前</TextBlock>
                    <TextBox MinWidth="50" Text="{Binding TimeBefore}"   Height="20" MaxLength="5"></TextBox>
                    <TextBlock  FontWeight="Normal" >[分钟]语音提醒</TextBlock>
                </DockPanel>
                <DockPanel Grid.Row="3" Margin="25,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2">
                    <CheckBox IsChecked="{Binding IsTrunOnWarning}" VerticalContentAlignment="Center" Content="光控开灯语音提醒 [wav格式,位置为运行目录下:AlarmSound\\TurnOn.WAV]" VerticalAlignment="Center" ToolTip="\\AlarmSound\\TurnOn.WAV"></CheckBox>
                </DockPanel>
                <CheckBox Grid.Row="4" Margin="25,0,0,0" VerticalContentAlignment="Center" IsChecked="{Binding IsTrunOffWarning}" Content="光控关灯语音提醒 [wav格式,位置为运行目录下:AlarmSound\\TurnOff.WAV]" VerticalAlignment="Center" ToolTip="\\AlarmSound\\TurnOff.WAV" Grid.ColumnSpan="2"></CheckBox>

