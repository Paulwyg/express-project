        <DockPanel Grid.Row="2" Margin="0,5,0,0"  HorizontalAlignment="Center"  Visibility="{Binding PagerVisi}"  >
            <DockPanel >
                <telerik:RadDataPager x:Name="radDataPager" Grid.Column="1" Grid.Row="1"
                             FontSize="12"  Background="Transparent" Opacity="1"  NumericButtonCount="7"
                            BorderThickness="0" PageIndex="{Binding PageIndex,Mode=TwoWay}" VerticalAlignment="Bottom" Margin="0,0,0,1" 
                            VerticalContentAlignment="Bottom"  HorizontalContentAlignment="Center" HorizontalAlignment="Center"  
                            DisplayMode="All" PageSize="100" ItemCount="{Binding ItemCount,Mode=TwoWay}" />

                <TextBlock   HorizontalAlignment="Center"   VerticalAlignment="Bottom"  Margin="0,0,0,1" Text="{Binding PageTotal,Mode=TwoWay}"  />
            </DockPanel>
        </DockPanel>
    </Grid>
</UserControl>
