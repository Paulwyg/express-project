                             FontSize="12"  Background="Transparent" Opacity="1"  NumericButtonCount="7"
                            BorderThickness="0" PageIndex="{Binding PageIndex,Mode=TwoWay}"
                            VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left"
                            DisplayMode="All" PageSize="100" ItemCount="{Binding ItemCount,Mode=TwoWay}" />
                   
                     <TextBlock Grid.Column="2" HorizontalAlignment="Center"   VerticalAlignment="Center" Grid.Row="1"  Text="{Binding PageTotal,Mode=TwoWay}"  />
                     
                </Grid>
