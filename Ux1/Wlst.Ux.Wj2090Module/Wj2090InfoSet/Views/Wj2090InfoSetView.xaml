            <Button Content="设置时钟" Width="160" Height="30" Grid.Row="7" Command="{Binding CmdZcOrSnd}" CommandParameter="10" ></Button>

            <Button Content="召测集中器参数" Width="160" Height="30" Grid.Column="1" Command="{Binding CmdZcOrSnd}" CommandParameter="11" ></Button>
            <Button Content="召测控制器域名修改信息" Width="160" Height="30"  Grid.Column="1" Grid.Row="1" Command="{Binding CmdZcOrSnd}" CommandParameter="12" ></Button>
            <Button Content="召测集中器报警参数" Width="160" Height="30"  Grid.Column="1" Grid.Row="2" Command="{Binding CmdZcOrSnd}" CommandParameter="13" ></Button>
            <Button Content="召测软件版本" Width="160" Height="30"  Grid.Column="1" Grid.Row="3" Command="{Binding CmdZcOrSnd}" CommandParameter="14" ></Button>
            <Button Content="召测时钟" Width="160" Height="30"  Grid.Column="1" Grid.Row="4" Command="{Binding CmdZcOrSnd}" CommandParameter="15" ></Button>

            <StackPanel    Grid.Column="1" Grid.Row="5" Grid.RowSpan="4">
                <CheckBox IsChecked="{Binding  SndSelectedItems[0].IsSelected}" Content="复位集中器" Margin="5,15,0,0"></CheckBox>
                <CheckBox IsChecked="{Binding  SndSelectedItems[1].IsSelected}" Content="外部复位Zigbee模块" Margin="5,5,0,0"></CheckBox>
                <CheckBox IsChecked="{Binding  SndSelectedItems[2].IsSelected}" Content="软件复位Zigbee模块" Margin="5,5,0,0"></CheckBox>
                <CheckBox IsChecked="{Binding  SndSelectedItems[3].IsSelected}" Content="复位电力载波模块" Margin="5,5,0,0"></CheckBox>
                <CheckBox IsChecked="{Binding  SndSelectedItems[4].IsSelected}" Content="初始化所有硬件配置" Margin="5,5,0,0"></CheckBox>
                <CheckBox IsChecked="{Binding  SndSelectedItems[5].IsSelected}" Content="初始化数据区" Margin="5,5,0,0"></CheckBox>
                <CheckBox IsChecked="{Binding  SndSelectedItems[6].IsSelected}" Content="初始化参数区" Margin="5,5,0,0"></CheckBox>
                <CheckBox IsChecked="{Binding  SndSelectedItems[7].IsSelected}" Content="清除缓存未执行任务" Margin="5,5,0,0"></CheckBox>
            </StackPanel>
            <Button Content="复位及网络初始化" Width="160" Height="30"  Grid.Column="0" Grid.Row="9" Command="{Binding CmdZcOrSnd}" CommandParameter="16" ></Button>
            <Grid Grid.RowSpan="4" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding ShowSndInfoAll}" TextWrapping="Wrap" Grid.Row="1"></TextBlock>
                <TextBlock Text="{Binding ShowSndInfo1}" TextWrapping="Wrap" Grid.Row="2"></TextBlock>
                <TextBlock Text="{Binding ShowSndInfo2}" TextWrapping="Wrap" Grid.Row="3"></TextBlock>
                <TextBlock Text="{Binding ShowSndInfo3}" TextWrapping="Wrap" Grid.Row="4"></TextBlock>
                <TextBlock Text="{Binding ShowSndInfo4}" TextWrapping="Wrap" Grid.Row="5"></TextBlock>
            </Grid>
            <TextBox x:Name="txtShowInfo" IsReadOnly="True" VerticalScrollBarVisibility="Visible" MouseDoubleClick="TextBox_MouseDoubleClick"  Text="{Binding ShowSndInfo}" TextWrapping="Wrap" Grid.Column="2" Grid.Row="4" Grid.RowSpan="10" VerticalContentAlignment="Top"></TextBox>
        </Grid>

        <Grid  Grid.Row="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="30"/>
                <ColumnDefinition Width="130" MinWidth="30"/>
                <ColumnDefinition Width="130" MinWidth="30"/>
                <ColumnDefinition Width="130" MinWidth="30"/>
                <ColumnDefinition Width="300" MinWidth="30"/>
                <ColumnDefinition Width="150" MinWidth="30"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Msg}" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"></TextBlock>
            <Button Margin="15,0,15,0" Content="保存" Command="{Binding CmdSaveAndSnd}" Grid.Column="3" MinWidth="100" Height="25"/>
            <DockPanel Grid.Column="4">
                <Button Visibility="{Binding SndSluParaVisi}" Margin="15,0,15,0" Content="发送集中器参数" ToolTip="请保存后再发送" Command="{Binding CmdSndSluPara}"  Width="200" Height="25"/>
            <Button Visibility="{Binding SndCtrlParaVisi}" Margin="15,0,15,0" Content="发送选中控制器参数" ToolTip="请保存后再发送"  Command="{Binding CmdSndCtrlPara}"  Width="200" Height="25"/>

            </DockPanel>
            
            <Button Margin="15,0,15,0" Grid.Column="1"  Content="上一步" Command="{Binding CmdUp}" MinWidth="100" Height="25"/>
            <Button Margin="15,0,15,0" Grid.Column="2" Content="下一步" Command="{Binding CmdNext}" MinWidth="100" Height="25"/>
        </Grid>

    </Grid>
    
