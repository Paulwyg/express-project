                <RowDefinition Height="30"/>

                <RowDefinition Height="Auto" MinHeight="100"/>
            </Grid.RowDefinitions>

            <Button Content="选测控制器物理信息" Width="160" Height="30" Grid.Row="3" Command="{Binding CmdxSnd}" CommandParameter="4"  ></Button>
            <Button Content="选测控制器基本数据" Width="160" Height="30" Grid.Row="5" Command="{Binding CmdxSnd}" CommandParameter="5"  ></Button>
            <Button Content="选测控制器辅助数据" Width="160" Height="30" Grid.Row="7" Command="{Binding CmdxSnd}" CommandParameter="6"  ></Button>-->

        </Grid>
        <!--发送参数控制-->
        <Grid Visibility="{Binding ParaType,Converter={StaticResource GridEnumVisibleConvert},ConverterParameter=4}"   Grid.RowSpan="2" >
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>

                <RowDefinition Height="20"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>

                <RowDefinition Height="Auto" MinHeight="100"/>



            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"></ColumnDefinition>
                <ColumnDefinition Width="220"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Text="复位网络1：根据设置域名，复位整个网络." Grid.Row="11" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="20,0,0,0" ></TextBlock>
            <TextBlock Text="复位网络2：根据当前域名搜索网络以路由形式加入网络." Grid.Row="12" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="20,0,0,0"></TextBlock>
            <TextBlock Text="复位网络3：根据设置域名创建网络." Grid.Row="13" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="20,0,0,0"></TextBlock>
            <TextBlock Text="复位网络4：根据设置域名搜索网络以路由形式加入网络." Grid.Row="14" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="20,0,0,0"></TextBlock>
            <Button Content="复位网络1" Width="160" Height="30" Command="{Binding CmdZcOrSnd}" CommandParameter="1" ></Button>
            <Button Content="复位网络2" Width="160" Height="30" Grid.Row="1" Command="{Binding CmdZcOrSnd}" CommandParameter="2" ></Button>
            <Button Content="复位网络3" Width="160" Height="30" Grid.Row="2 "  Command="{Binding CmdZcOrSnd}" CommandParameter="3"  ></Button>
            <Button Content="复位网络4" Width="160" Height="30" Grid.Row="3" Command="{Binding CmdZcOrSnd}" CommandParameter="4"  ></Button>

