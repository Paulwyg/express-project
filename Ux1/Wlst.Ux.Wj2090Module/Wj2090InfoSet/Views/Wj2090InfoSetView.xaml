                    <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="10,10,10,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Border  Grid.Row="0" BorderBrush="Gray" BorderThickness="1">
